@using Home_Expert.Resources
@using Microsoft.Extensions.Localization
@{
    Layout = null;
}
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture.Name;
    var isArabic = culture.StartsWith("ar");
}

@inject IStringLocalizer<SharedResource> _sharedResources;
<!DOCTYPE html>
<html lang="@culture" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@_sharedResources[SharedResourcesKeys.Project_Title]</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/accountstyles.css" rel="stylesheet" />

</head>
<body>
    <div class="main-wrapper">

        <!-- ===== Left Side: Hero (Fixed) ===== -->
        <div class="hero-section">
            <img src="~/img/reqimg.png" alt="Luxury Modern Kitchen" class="hero-image">
            <div class="hero-overlay"></div>

            <div class="hero-content">
                <div>
                    <h1 class="hero-logo">
                        @_sharedResources[SharedResourcesKeys.Project_Title]<span class="logo-dot"></span>
                    </h1>
                </div>

                <div class="hero-main">
                    <div class="service-icons">
                        <div class="service-icon-item">
                            <div class="service-icon-box">
                                <span class="material-symbols-outlined">local_shipping</span>
                            </div>
                            <span class="service-label">@_sharedResources[SharedResourcesKeys.Service_Moving]</span>
                        </div>
                        <div class="service-icon-item">
                            <div class="service-icon-box">
                                <span class="material-symbols-outlined">point_of_sale</span>
                            </div>
                            <span class="service-label">@_sharedResources[SharedResourcesKeys.Service_Sales]</span>
                        </div>
                        <div class="service-icon-item">
                            <div class="service-icon-box">
                                <span class="material-symbols-outlined">construction</span>
                            </div>
                            <span class="service-label">@_sharedResources[SharedResourcesKeys.Service_Installation]</span>
                        </div>
                    </div>

                    <h2 class="hero-title">@_sharedResources[SharedResourcesKeys.Hero_Title]</h2>
                    <p class="hero-description">@_sharedResources[SharedResourcesKeys.Hero_Description]</p>

                    <div class="user-trust">
                        <div class="user-avatars">
                            <img src="~/img/account.png" alt="User" class="user-avatar">
                            <div class="user-count">1k+</div>
                        </div>
                        <p class="trust-text">@_sharedResources[SharedResourcesKeys.Hero_Trust_Text]</p>
                    </div>
                </div>

                <div class="hero-footer">
                    <span>@_sharedResources[SharedResourcesKeys.Footer_Copyright]</span>
                </div>
            </div>
        </div>

        <!-- ===== Right Side: Form (Scrollable) ===== -->
        <div class="form-section">
            <!-- Language Toggle -->
            <div class="language-toggle">
                <form id="languageForm" asp-controller="Language" asp-action="SetLanguage" method="post">
                    <input type="hidden" name="culture" id="cultureInput" />
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                    <button type="button" onclick="toggleLanguage()" class="btn-language">
                        @if (isArabic)
                        {
                            <div class="btn-lang-en">
                                <span class="material-symbols-outlined">language</span>
                                English
                            </div>
                        }
                        else
                        {
                            <div class="btn-lang-ar">
                                <span class="material-symbols-outlined">language</span>
                                العربية
                            </div>
                        }
                    </button>
                </form>
            </div>

            <div class="form-container">

                <!-- ===== Step 1: Registration Form ===== -->
                <div id="step1" class="form-step active">
                    <div id="alertBox" class="alert d-none mb-3" role="alert"></div>

                    <div class="form-header">
                        <h2 class="form-title">@_sharedResources[SharedResourcesKeys.Form_Title]</h2>
                        <p class="form-subtitle">@_sharedResources[SharedResourcesKeys.Form_Subtitle]</p>
                    </div>

                    <div class="progress-steps">
                        <div class="step-item active">
                            <span class="step-number">1</span>
                            <span class="step-label">@_sharedResources[SharedResourcesKeys.Step_Details]</span>
                        </div>
                        <div class="step-divider"></div>
                        <div class="step-item">
                            <span class="step-number">2</span>
                            <span class="step-label">@_sharedResources[SharedResourcesKeys.Step_Verification]</span>
                        </div>
                    </div>

                    <form id="registrationForm" class="registration-form" novalidate>

                        <!-- First Name: AR + EN -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">
                                    @_sharedResources[SharedResourcesKeys.Label_FirstNameAr]
                                    <span class="lang-badge lang-badge-ar">AR</span>
                                </label>
                                <div class="input-group-custom">
                                    <span class="material-symbols-outlined input-icon">person</span>
                                    <input type="text" name="FirstNameAr" id="firstNameAr" class="form-control-custom"
                                           placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_FirstNameAr]" dir="rtl">
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label">
                                    @_sharedResources[SharedResourcesKeys.Label_FirstNameEn]
                                    <span class="lang-badge lang-badge-en">EN</span>
                                </label>
                                <div class="input-group-custom">
                                    <span class="material-symbols-outlined input-icon">person</span>
                                    <input type="text" name="FirstNameEn" id="firstNameEn" class="form-control-custom"
                                           placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_FirstNameEn]" dir="ltr">
                                </div>
                            </div>
                        </div>

                        <!-- Company Name: AR + EN -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">
                                    @_sharedResources[SharedResourcesKeys.Label_CompanyNameAr]
                                    <span class="lang-badge lang-badge-ar">AR</span>
                                </label>
                                <div class="input-group-custom">
                                    <span class="material-symbols-outlined input-icon">business</span>
                                    <input type="text" name="CompanyNameAr" id="companyNameAr" class="form-control-custom"
                                           placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_CompanyNameAr]" dir="rtl">
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label">
                                    @_sharedResources[SharedResourcesKeys.Label_CompanyNameEn]
                                    <span class="lang-badge lang-badge-en">EN</span>
                                </label>
                                <div class="input-group-custom">
                                    <span class="material-symbols-outlined input-icon">business</span>
                                    <input type="text" name="CompanyNameEn" id="companyNameEn" class="form-control-custom"
                                           placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_CompanyNameEn]" dir="ltr">
                                </div>
                            </div>
                        </div>

                        <!-- Service Type -->
                        <div class="mb-4">
                            <label class="form-label">@_sharedResources[SharedResourcesKeys.Label_ServiceType]</label>
                            <div class="input-group-custom">
                                <span class="material-symbols-outlined input-icon">home_repair_service</span>
                                <select name="ServiceTypeId" id="serviceType" class="form-control-custom"></select>
                            </div>
                        </div>

                        <!-- Years of Experience -->
                        <div class="mb-4">
                            <label class="form-label">@_sharedResources[SharedResourcesKeys.Label_YearsExperience]</label>
                            <div class="input-group-custom">
                                <span class="material-symbols-outlined input-icon">work_history</span>
                                <input type="number" name="YearsExperience" id="yearsExperience" class="form-control-custom"
                                       placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_YearsExperience]" min="0" max="50">
                            </div>
                        </div>

                        <!-- Description: AR + EN -->
                        <div class="mb-4">
                            <label class="form-label">
                                @_sharedResources[SharedResourcesKeys.Label_DescriptionAr]
                                <span class="lang-badge lang-badge-ar">AR</span>
                            </label>
                            <div class="input-group-custom">
                                <span class="material-symbols-outlined input-icon">description</span>
                                <textarea name="DescriptionAr" id="descriptionAr" class="form-control-custom" rows="3"
                                          placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_DescriptionAr]"
                                          maxlength="500" dir="rtl"></textarea>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">
                                @_sharedResources[SharedResourcesKeys.Label_DescriptionEn]
                                <span class="lang-badge lang-badge-en">EN</span>
                            </label>
                            <div class="input-group-custom">
                                <span class="material-symbols-outlined input-icon">description</span>
                                <textarea name="DescriptionEn" id="descriptionEn" class="form-control-custom" rows="3"
                                          placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_DescriptionEn]"
                                          maxlength="500" dir="ltr"></textarea>
                            </div>
                        </div>

                        <!-- ===== Logo ===== -->
                   
                        <div class="mb-4">
                            <p class="file-section-title">
                                <span class="material-symbols-outlined" style="font-size:15px">badge</span>
                                  @_sharedResources[SharedResourcesKeys.Label_Logo]
                            </p>
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <div class="file-upload-card">
                                        <div class="file-card-label">
                                             @_sharedResources[SharedResourcesKeys.Label_Logo]
                                        </div>
                                        <input type="file" name="logo" id="logo"
                                               class="form-control form-control-sm"
                                              >
                                           <small class="text-muted">@_sharedResources[SharedResourcesKeys.Logo_Helper]</small>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Showroom Address: AR + EN -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">
                                    @_sharedResources[SharedResourcesKeys.Label_ShowroomAddressAr]
                                    <span class="lang-badge lang-badge-ar">AR</span>
                                </label>
                                <div class="input-group-custom">
                                    <span class="material-symbols-outlined input-icon">location_on</span>
                                    <input type="text" name="ShowroomAddressAr" id="showroomAddressAr" class="form-control-custom"
                                           placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_ShowroomAddressAr]"
                                           maxlength="250" dir="rtl">
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label">
                                    @_sharedResources[SharedResourcesKeys.Label_ShowroomAddressEn]
                                    <span class="lang-badge lang-badge-en">EN</span>
                                </label>
                                <div class="input-group-custom">
                                    <span class="material-symbols-outlined input-icon">location_on</span>
                                    <input type="text" name="ShowroomAddressEn" id="showroomAddressEn" class="form-control-custom"
                                           placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_ShowroomAddressEn]"
                                           maxlength="250" dir="ltr">
                                </div>
                            </div>
                        </div>

                        <!-- ===== Showroom Image ===== -->
                        <div class="mb-4">
                            <p class="file-section-title">
                                <span class="material-symbols-outlined" style="font-size:15px">image</span>
                                @_sharedResources[SharedResourcesKeys.Label_ShowroomImage]
                            </p>
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <div class="file-upload-card">
                                        <div class="file-card-label">
                                            @_sharedResources[SharedResourcesKeys.Label_ShowroomImage]
                                        </div>
                                        <input type="file" name="ShowroomImage" id="showroomImage"
                                               class="form-control form-control-sm"
                                               accept="image/jpeg,image/jpg,image/png">
                                        <div class="file-hint">
                                            @(isArabic ? "صورة الموقع" : "Showroom photo")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ===== Commercial Registration ===== -->
                        <div class="mb-4">
                            <p class="file-section-title">
                                <span class="material-symbols-outlined" style="font-size:15px">article</span>
                                @_sharedResources[SharedResourcesKeys.Label_CommercialFile]
                            </p>
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <div class="file-upload-card">
                                        <div class="file-card-label">
                                            @_sharedResources[SharedResourcesKeys.Label_CommercialFile]
                                        </div>
                                        <input type="file" name="CommercialRegistrationFile" id="commercialFile"
                                               class="form-control form-control-sm"
                                               accept="application/pdf,image/jpeg,image/jpg,image/png">
                                        <div class="file-hint">
                                            @(isArabic ? "PDF أو صورة " : "PDF or image ")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ===== Work License ===== -->
                        <div class="mb-4">
                            <p class="file-section-title">
                                <span class="material-symbols-outlined" style="font-size:15px">badge</span>
                                @_sharedResources[SharedResourcesKeys.Label_WorkLicense]
                            </p>
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <div class="file-upload-card">
                                        <div class="file-card-label">
                                            @_sharedResources[SharedResourcesKeys.Label_WorkLicense]
                                        </div>
                                        <input type="file" name="WorkLicenseFile" id="workLicenseFile"
                                               class="form-control form-control-sm"
                                               accept="application/pdf,image/jpeg,image/jpg,image/png">
                                        <div class="file-hint">
                                            @(isArabic ? "PDF أو صورة" : "PDF or image")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Email & Phone -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">@_sharedResources[SharedResourcesKeys.Label_Email]</label>
                                <div class="input-group-custom">
                                    <span class="material-symbols-outlined input-icon">mail</span>
                                    <input type="email" name="Email" id="email" class="form-control-custom"
                                           placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_Email]">
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label">@_sharedResources[SharedResourcesKeys.Label_Phone]</label>
                                <div class="input-group-custom">
                                    <span class="material-symbols-outlined input-icon">call</span>
                                    <input type="tel" name="Phone" id="phone" class="form-control-custom"
                                           placeholder="@_sharedResources[SharedResourcesKeys.Placeholder_Phone]">
                                </div>
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label class="form-label">@_sharedResources[SharedResourcesKeys.Label_Password]</label>
                            <div class="input-group-custom">
                                <span class="material-symbols-outlined input-icon">lock</span>
                                <input type="password" name="Password" id="password" class="form-control-custom"
                                       placeholder="••••••••" minlength="8">
                                <button type="button" class="password-toggle" onclick="togglePassword()">
                                    <span class="material-symbols-outlined" id="passwordIcon">visibility</span>
                                </button>
                            </div>
                            <div class="password-strength" id="passwordStrength">
                                <div class="strength-bar">
                                    <div class="strength-fill" id="strengthFill"></div>
                                </div>
                                <span class="strength-text" id="strengthText"></span>
                            </div>
                            <small class="text-muted">@_sharedResources[SharedResourcesKeys.Error_PasswordWeak]</small>
                        </div>

                        <button type="button" onclick="goToStep2()" class="btn-submit">
                            @_sharedResources[SharedResourcesKeys.Button_CreateAccount]
                            <span class="material-symbols-outlined btn-arrow">arrow_forward</span>
                        </button>
                    </form>

                    <p class="signin-link">
                        @Html.Raw(_sharedResources[SharedResourcesKeys.SignIn_Link])
                    </p>
                </div>
                <!-- ===== END Step 1 ===== -->

                <!-- ===== Step 2: OTP ===== -->
                <div id="step2" class="form-step">
                    <div id="alertBox2" class="alert d-none mb-3" role="alert"></div>

                    <div class="form-header">
                        <h2 class="form-title">@_sharedResources[SharedResourcesKeys.OTP_Title]</h2>
                        <p class="form-subtitle">
                            @_sharedResources[SharedResourcesKeys.OTP_Subtitle]
                            <span id="emailDisplay" class="fw-bold"></span>
                        </p>
                    </div>

                    <div class="progress-steps">
                        <div class="step-item completed">
                            <span class="step-number">
                                <span class="material-symbols-outlined" style="font-size: 1rem;">check</span>
                            </span>
                            <span class="step-label">
                                @_sharedResources[SharedResourcesKeys.Step_Details]
                            </span>
                        </div>
                        <div class="step-divider completed"></div>
                        <div class="step-item active">
                            <span class="step-number">2</span>
                            <span class="step-label">
                                @_sharedResources[SharedResourcesKeys.Step_Verification]
                            </span>
                        </div>
                    </div>

                    <form id="otpForm" class="otp-form">
                        <input type="hidden" name="FirstNameAr"   id="hiddenFirstNameAr" />
                        <input type="hidden" name="FirstNameEn"   id="hiddenFirstNameEn" />
                        <input type="hidden" name="CompanyNameAr" id="hiddenCompanyNameAr" />
                        <input type="hidden" name="CompanyNameEn" id="hiddenCompanyNameEn" />
                        <input type="hidden" name="Email"         id="hiddenEmail" />
                        <input type="hidden" name="Phone"         id="hiddenPhone" />
                        <input type="hidden" name="Password"      id="hiddenPassword" />

                        <div class="otp-icon-container">
                            <div class="otp-icon">
                                <span class="material-symbols-outlined">mail</span>
                            </div>
                        </div>

                        <div class="otp-inputs">
                            <input type="text" maxlength="1" class="otp-input" id="otp1" name="otp1" pattern="[0-9]" inputmode="numeric" required>
                            <input type="text" maxlength="1" class="otp-input" id="otp2" name="otp2" pattern="[0-9]" inputmode="numeric" required>
                            <input type="text" maxlength="1" class="otp-input" id="otp3" name="otp3" pattern="[0-9]" inputmode="numeric" required>
                            <input type="text" maxlength="1" class="otp-input" id="otp4" name="otp4" pattern="[0-9]" inputmode="numeric" required>
                            <input type="text" maxlength="1" class="otp-input" id="otp5" name="otp5" pattern="[0-9]" inputmode="numeric" required>
                            <input type="text" maxlength="1" class="otp-input" id="otp6" name="otp6" pattern="[0-9]" inputmode="numeric" required>
                        </div>

                        <div class="otp-timer">
                            <p class="timer-text">
                                @_sharedResources[SharedResourcesKeys.OTP_TimerText]
                                <span id="timer" class="timer-countdown">05:00</span>
                            </p>
                        </div>

                        <button type="submit" class="btn-submit" id="verifyBtn">
                            @_sharedResources[SharedResourcesKeys.OTP_VerifyButton]
                            <span class="material-symbols-outlined btn-arrow">arrow_forward</span>
                        </button>

                        <div class="resend-container">
                            <button type="button" class="btn-resend" id="resendBtn" disabled>
                                @_sharedResources[SharedResourcesKeys.OTP_ResendButton]
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <button type="button" onclick="goToStep1()" class="btn-link">
                                <span class="material-symbols-outlined" style="font-size: 1rem; vertical-align: middle;">arrow_back</span>
                                @_sharedResources[SharedResourcesKeys.OTP_BackButton]
                            </button>
                        </div>
                    </form>
                </div>
                <!-- ===== END Step 2 ===== -->

            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const IS_ARABIC = '@isArabic' === 'True';

        function isValidEmail(email) {
            var parts = email.split(String.fromCharCode(64));
            if (parts.length !== 2) return false;
            if (parts[0].length === 0) return false;
            var domainParts = parts[1].split('.');
            if (domainParts.length < 2) return false;
            for (var i = 0; i < domainParts.length; i++) { if (domainParts[i].length === 0) return false; }
            return true;
        }

        function hasSpecialChar(str) {
            var specials = String.fromCharCode(33,64,35,36,37,94,38,42,40,41,95,43,45,61,123,125,124,58,59,60,62,63,44,46,47);
            for (var i = 0; i < str.length; i++) { if (specials.indexOf(str[i]) !== -1) return true; }
            return false;
        }

        function toggleLanguage() {
            var currentCulture = '@culture';
            var newCulture = currentCulture.startsWith('ar') ? 'en-US' : 'ar-JO';
            document.getElementById('cultureInput').value = newCulture;
            document.getElementById('languageForm').submit();
        }

        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const passwordIcon  = document.getElementById('passwordIcon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.textContent = 'visibility_off';
            } else {
                passwordInput.type = 'password';
                passwordIcon.textContent = 'visibility';
            }
        }

        function showAlert(type, message, step = 1) {
            const alertBox = step === 1 ? document.getElementById('alertBox') : document.getElementById('alertBox2');
            if (!alertBox) { alert(message); return; }
            alertBox.className = 'alert alert-' + type;
            alertBox.classList.remove('d-none');
            const icons = { success: 'check_circle', danger: 'error', warning: 'warning', info: 'info' };
            const iconHtml = icons[type] ? '<span class="material-symbols-outlined me-2">' + icons[type] + '</span>' : '';
            alertBox.innerHTML = iconHtml + message;
            setTimeout(() => alertBox.classList.add('d-none'), 7000);
        }

        async function safeJson(response, step) {
            const text = await response.text();
            try {
                return JSON.parse(text);
            } catch (err) {
                console.error('Server returned non-JSON:', text);
                showAlert('danger', '@_sharedResources[SharedResourcesKeys.Message_ServerError]', step);
                return null;
            }
        }

        function showFieldError(fieldId, message) {
            const field = document.getElementById(fieldId);
            if (!field) return;
            field.classList.add('input-error');
            const old = document.getElementById('err-' + fieldId);
            if (old) old.remove();
            const errorEl = document.createElement('div');
            errorEl.id = 'err-' + fieldId;
            errorEl.className = 'field-error-msg';
            errorEl.textContent = message;
            const wrapper = field.closest('.input-group-custom') || field.closest('.file-upload-card');
            if (wrapper) wrapper.insertAdjacentElement('afterend', errorEl);
            else field.insertAdjacentElement('afterend', errorEl);
            field.addEventListener('input',  () => clearFieldError(fieldId), { once: true });
            field.addEventListener('change', () => clearFieldError(fieldId), { once: true });
        }

        function clearFieldError(fieldId) {
            const field = document.getElementById(fieldId);
            if (field) field.classList.remove('input-error');
            const errorEl = document.getElementById('err-' + fieldId);
            if (errorEl) errorEl.remove();
        }

        function clearAllErrors() {
            document.querySelectorAll('.field-error-msg').forEach(el => el.remove());
            document.querySelectorAll('.input-error').forEach(el => el.classList.remove('input-error'));
        }

        async function goToStep2() {
            clearAllErrors();
            let hasError = false;

            const firstNameAr      = document.getElementById('firstNameAr').value.trim();
            const firstNameEn      = document.getElementById('firstNameEn').value.trim();
            const companyNameAr    = document.getElementById('companyNameAr').value.trim();
            const companyNameEn    = document.getElementById('companyNameEn').value.trim();
            const serviceType      = document.getElementById('serviceType').value;
            const email            = document.getElementById('email').value.trim();
            const phone            = document.getElementById('phone').value.trim();
            const password         = document.getElementById('password').value;
            const yearsExp         = document.getElementById('yearsExperience').value.trim();
            const showroomAddrAr   = document.getElementById('showroomAddressAr').value.trim();
            const showroomAddrEn   = document.getElementById('showroomAddressEn').value.trim();
            const logoInput        = document.getElementById('logo');
            const showroomImgEl    = document.getElementById('showroomImage');
            const commercialFileEl = document.getElementById('commercialFile');
            const workLicenseEl    = document.getElementById('workLicenseFile');

            if (!firstNameAr)  { showFieldError('firstNameAr',  IS_ARABIC ? 'الاسم الأول بالعربي مطلوب'       : 'First name in Arabic is required');       hasError = true; }
            if (!firstNameEn)  { showFieldError('firstNameEn',  IS_ARABIC ? 'الاسم الأول بالإنجليزي مطلوب'    : 'First name in English is required');      hasError = true; }
            if (!companyNameAr){ showFieldError('companyNameAr',IS_ARABIC ? 'اسم الشركة بالعربي مطلوب'        : 'Company name in Arabic is required');     hasError = true; }
            if (!companyNameEn){ showFieldError('companyNameEn',IS_ARABIC ? 'اسم الشركة بالإنجليزي مطلوب'     : 'Company name in English is required');    hasError = true; }
            if (!serviceType)  { showFieldError('serviceType',  IS_ARABIC ? 'يرجى اختيار نوع الخدمة'          : 'Please select a service type');           hasError = true; }

            if (!yearsExp) {
                showFieldError('yearsExperience', IS_ARABIC ? 'سنوات الخبرة مطلوبة' : 'Years of experience is required');
                hasError = true;
            } else if (parseInt(yearsExp) < 0 || parseInt(yearsExp) > 50) {
                showFieldError('yearsExperience', IS_ARABIC ? 'سنوات الخبرة يجب أن تكون بين 0 و 50' : 'Years of experience must be between 0 and 50');
                hasError = true;
            }

            if (!logoInput.files || logoInput.files.length === 0) { showFieldError('logo', IS_ARABIC ? 'شعار الشركة مطلوب' : 'Company logo is required'); hasError = true; }

            if (!showroomAddrAr) { showFieldError('showroomAddressAr', IS_ARABIC ? 'عنوان المعرض بالعربي مطلوب'      : 'Showroom address in Arabic is required'); hasError = true; }
            else if (showroomAddrAr.length > 250) { showFieldError('showroomAddressAr', IS_ARABIC ? 'العنوان يجب ألا يتجاوز 250 حرف' : 'Max 250 characters'); hasError = true; }

            if (!showroomAddrEn) { showFieldError('showroomAddressEn', IS_ARABIC ? 'عنوان المعرض بالإنجليزي مطلوب'   : 'Showroom address in English is required'); hasError = true; }
            else if (showroomAddrEn.length > 250) { showFieldError('showroomAddressEn', IS_ARABIC ? 'العنوان يجب ألا يتجاوز 250 حرف' : 'Max 250 characters'); hasError = true; }

            if (!showroomImgEl.files    || showroomImgEl.files.length === 0)    { showFieldError('showroomImage',  IS_ARABIC ? 'صورة الموقع مطلوبة'      : 'Showroom image is required');              hasError = true; }
            if (!commercialFileEl.files || commercialFileEl.files.length === 0) { showFieldError('commercialFile', IS_ARABIC ? 'الملف التجاري مطلوب'      : 'Commercial registration file is required'); hasError = true; }
            if (!workLicenseEl.files    || workLicenseEl.files.length === 0)    { showFieldError('workLicenseFile',IS_ARABIC ? 'رخصة المهن مطلوبة'        : 'Work license file is required');           hasError = true; }

            if (!email) { showFieldError('email', IS_ARABIC ? 'البريد الإلكتروني مطلوب' : 'Email is required'); hasError = true; }
            else if (!isValidEmail(email)) { showFieldError('email', IS_ARABIC ? 'صيغة البريد الإلكتروني غير صحيحة' : 'Invalid email format'); hasError = true; }

            if (!phone)    { showFieldError('phone',    IS_ARABIC ? 'رقم الهاتف مطلوب'   : 'Phone number is required'); hasError = true; }
            if (!password) { showFieldError('password', IS_ARABIC ? 'كلمة المرور مطلوبة' : 'Password is required');     hasError = true; }
            else if (password.length < 8) { showFieldError('password', IS_ARABIC ? 'كلمة المرور يجب أن تكون 8 أحرف على الأقل' : 'Password must be at least 8 characters'); hasError = true; }

            if (hasError) {
                const firstError = document.querySelector('.field-error-msg');
                if (firstError) firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                return;
            }

            const formData = new FormData();
            formData.append('FirstNameAr',           firstNameAr);
            formData.append('FirstNameEn',           firstNameEn);
            formData.append('CompanyNameAr',         companyNameAr);
            formData.append('CompanyNameEn',         companyNameEn);
            formData.append('Email',                 email);
            formData.append('Password',              password);
            formData.append('ConfirmPassword',       password);
            formData.append('Phone',                 phone);
            formData.append('DescriptionAr',         document.getElementById('descriptionAr').value || '');
            formData.append('DescriptionEn',         document.getElementById('descriptionEn').value || '');
            formData.append('YearsExperience',       document.getElementById('yearsExperience').value || 0);
            formData.append('ServiceTypeId',         serviceType);
            formData.append('ShowroomAddressAr',     showroomAddrAr);
            formData.append('ShowroomAddressEn',     showroomAddrEn);

            if (logoInput.files.length > 0)        formData.append('Logo',                       logoInput.files[0]);
            if (showroomImgEl.files.length > 0)    formData.append('ShowroomImage',               showroomImgEl.files[0]);
            if (commercialFileEl.files.length > 0) formData.append('CommercialRegistrationFile',  commercialFileEl.files[0]);
            if (workLicenseEl.files.length > 0)    formData.append('WorkLicenseFile',             workLicenseEl.files[0]);

            const submitBtn       = document.querySelector('#step1 .btn-submit');
            const originalBtnText = submitBtn.innerHTML;
            submitBtn.disabled    = true;
            submitBtn.innerHTML   = '<span class="spinner-border spinner-border-sm ' + (IS_ARABIC ? 'ms-2' : 'me-2') + '"></span> ' + (IS_ARABIC ? 'جاري الإرسال...' : 'Sending...');

            try {
                const response = await fetch('/api/VendorAuth/Register', { method: 'POST', body: formData });
                const result   = await safeJson(response, 1);
                if (!result) return;
                console.log("Response OK:", response.ok);
                console.log("Result:", result);

                if (response.ok && (result.success === true || result.Success === true)) {
                    document.getElementById('hiddenFirstNameAr').value   = firstNameAr;
                    document.getElementById('hiddenFirstNameEn').value   = firstNameEn;
                    document.getElementById('hiddenCompanyNameAr').value = companyNameAr;
                    document.getElementById('hiddenCompanyNameEn').value = companyNameEn;
                    document.getElementById('hiddenEmail').value         = email;
                    document.getElementById('hiddenPhone').value         = phone;
                    document.getElementById('hiddenPassword').value      = password;
                    document.getElementById('emailDisplay').textContent  = email;

                    document.getElementById('step1').classList.remove('active');
                    document.getElementById('step2').classList.add('active');
                    document.querySelector('.form-section').scrollTop = 0;

                    initOTPHandlers();
                    showAlert('success', result.message || result.Message || '@_sharedResources[SharedResourcesKeys.Message_OTPSent]', 2);
                } else {
                    let errorMessage = result.message || result.Message || '@_sharedResources[SharedResourcesKeys.Message_ServerError]';
                    const errors = result.errors || result.Errors;
                    if (errors && errors.length > 0) {
                        const paddingSide = IS_ARABIC ? 'right' : 'left';
                        errorMessage = '<div style="margin-bottom:8px"><strong>' + errorMessage + '</strong></div>';
                        errorMessage += '<ul style="margin:0;padding-' + paddingSide + ':20px;list-style-position:inside;">';
                        errors.forEach(err => { errorMessage += '<li style="margin-bottom:4px">' + err + '</li>'; });
                        errorMessage += '</ul>';
                    }
                    showAlert('danger', errorMessage, 1);
                }
            } catch (error) {
                console.error('Network error:', error);
                showAlert('danger', '@_sharedResources[SharedResourcesKeys.Message_ServerError]', 1);
            } finally {
                submitBtn.disabled  = false;
                submitBtn.innerHTML = originalBtnText;
            }
        }

        function goToStep1() {
            document.getElementById('step2').classList.remove('active');
            document.getElementById('step1').classList.add('active');
        }

        function initOTPHandlers() {
            const inputs       = document.querySelectorAll('.otp-input');
            const resendBtn    = document.getElementById('resendBtn');
            const timerElement = document.getElementById('timer');

            inputs.forEach((input, index) => {
                input.value = '';
                input.addEventListener('input', function (e) {
                    if (!/^\d$/.test(e.target.value)) { e.target.value = ''; return; }
                    if (index < inputs.length - 1) inputs[index + 1].focus();
                });
                input.addEventListener('keydown', function (e) {
                    if (e.key === 'Backspace' && !e.target.value && index > 0) inputs[index - 1].focus();
                });
            });

            let timeLeft = 60;
            resendBtn.disabled = true;
            let countdown = setInterval(() => {
                timeLeft--;
                const m = Math.floor(timeLeft / 60), s = timeLeft % 60;
                timerElement.textContent = m.toString().padStart(2,'0') + ':' + s.toString().padStart(2,'0');
                if (timeLeft <= 0) { clearInterval(countdown); resendBtn.disabled = false; }
            }, 1000);

            resendBtn.onclick = async function () {
                const originalText = resendBtn.innerHTML;
                resendBtn.disabled = true;
                resendBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                try {
                    const response = await fetch('/api/VendorAuth/ResendOtp', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: document.getElementById('hiddenEmail').value })
                    });
                    const result = await safeJson(response, 2);
                    if (!result) { resendBtn.innerHTML = originalText; return; }
                    if (response.ok && (result.success === true || result.Success === true)) {
                        inputs.forEach(input => input.value = '');
                        inputs[0].focus();
                        clearInterval(countdown);
                        timeLeft = 60;
                        countdown = setInterval(() => {
                            timeLeft--;
                            const m = Math.floor(timeLeft / 60), s = timeLeft % 60;
                            timerElement.textContent = m.toString().padStart(2,'0') + ':' + s.toString().padStart(2,'0');
                            if (timeLeft <= 0) { clearInterval(countdown); resendBtn.disabled = false; }
                        }, 1000);
                        showAlert('success', result.message || result.Message || '@_sharedResources[SharedResourcesKeys.Message_OTPResent]', 2);
                    } else {
                        showAlert('danger', result.message || result.Message || '@_sharedResources[SharedResourcesKeys.Message_ServerError]', 2);
                        resendBtn.disabled = false;
                    }
                } catch (error) {
                    showAlert('danger', '@_sharedResources[SharedResourcesKeys.Message_ServerError]', 2);
                    resendBtn.disabled = false;
                } finally {
                    resendBtn.innerHTML = originalText;
                }
            };
            inputs[0].focus();
        }

        document.getElementById('otpForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const otpCode =
                document.getElementById('otp1').value + document.getElementById('otp2').value +
                document.getElementById('otp3').value + document.getElementById('otp4').value +
                document.getElementById('otp5').value + document.getElementById('otp6').value;

            if (otpCode.length !== 6) { showAlert('warning', '@_sharedResources[SharedResourcesKeys.Message_InvalidData]', 2); return; }

            const verifyBtn       = document.getElementById('verifyBtn');
            const originalBtnText = verifyBtn.innerHTML;
            verifyBtn.disabled    = true;
            verifyBtn.innerHTML   = '<span class="spinner-border spinner-border-sm ' + (IS_ARABIC ? 'ms-2' : 'me-2') + '"></span> ' + (IS_ARABIC ? 'جاري التحقق...' : 'Verifying...');

            try {
                const response = await fetch('/api/vendorauth/verify-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: document.getElementById('hiddenEmail').value, otpCode: otpCode })
                });
                const result = await safeJson(response, 2);
                if (!result) return;

                if (response.ok && (result.success === true || result.Success === true)) {
                    showAlert('success', result.message || result.Message || '@_sharedResources[SharedResourcesKeys.Message_RegistrationSuccess]', 2);
                    setTimeout(() => { window.location.href = '/Registration/Login'; }, 2000);
                } else {
                    const errorMsg = result.message || result.Message || '@_sharedResources[SharedResourcesKeys.Message_OTPIncorrect]';
                    showAlert('danger', errorMsg, 2);
                    if (errorMsg.includes('استنفذت') || errorMsg.includes('exhausted') ||
                        errorMsg.includes('جميع المحاولات') || errorMsg.includes('all attempts')) {
                        setTimeout(() => goToStep1(), 5000);
                    }
                }
            } catch (error) {
                showAlert('danger', '@_sharedResources[SharedResourcesKeys.Message_ServerError]', 2);
            } finally {
                verifyBtn.disabled  = false;
                verifyBtn.innerHTML = originalBtnText;
            }
        });

        document.getElementById('password').addEventListener('input', function (e) {
            const password = e.target.value;
            const strengthContainer = document.getElementById('passwordStrength');
            const strengthText = document.getElementById('strengthText');
            if (!password) {
                strengthContainer.classList.remove('visible','strength-weak','strength-medium','strength-strong');
                strengthText.textContent = ''; return;
            }
            let strength = 0;
            if (password.length >= 8)     strength++;
            if (/[a-z]/.test(password))   strength++;
            if (/[A-Z]/.test(password))   strength++;
            if (/\d/.test(password))      strength++;
            if (hasSpecialChar(password)) strength++;
            strengthContainer.className = 'password-strength visible';
            if (strength <= 2)      { strengthContainer.classList.add('strength-weak');   strengthText.textContent = IS_ARABIC ? 'ضعيفة'   : 'Weak'; }
            else if (strength <= 4) { strengthContainer.classList.add('strength-medium'); strengthText.textContent = IS_ARABIC ? 'متوسطة' : 'Medium'; }
            else                    { strengthContainer.classList.add('strength-strong'); strengthText.textContent = IS_ARABIC ? 'قوية'    : 'Strong'; }
        });

        async function loadServiceTypes() {
            try {
                const response = await fetch('/api/vendorauth/service-types');
                const data = await response.json();
                console.log('Loaded service types:', data);
                const select = document.getElementById('serviceType');
                select.innerHTML = '<option value="">' + (IS_ARABIC ? '-- اختر نوع الخدمة --' : '-- Select Service Type --') + '</option>';
                data.forEach(function(item) {
                    var option = document.createElement('option');
                    option.value = item.Id;
                    option.textContent = IS_ARABIC ? item.DescCodeAr : item.DescCodeEn;
                    select.appendChild(option);
                });
            } catch (err) {
                console.error('Failed to load service types:', err);
            }
        }

        loadServiceTypes();
    </script>
